---
interface Props {
  project: {
    name: string;
    image: string;
    description: string;
    technologies: Array<{
      name: string;
      icon: string;
    }>;
    links: Array<{
      type: 'github' | 'website' | 'download';
      url: string;
    }>;
  };
}

const { project } = Astro.props;
---

<article class="project-card">
  <header>
    <img class="card-image" src={project.image} alt={project.name} />
    <h2 class="card-title">{project.name}</h2>
  </header>
  
  <div class="content">
    <p class="description">{project.description}</p>
    
    <div class="tech-stack">
      <h3 class="section-title">Technologies</h3>
      <div class="tech-grid">
        {project.technologies.map(tech => (
          <div class="tech-item">
            <img src={tech.icon} alt={tech.name} />
            <span>{tech.name}</span>
          </div>
        ))}
      </div>
    </div>

    <footer class="card-footer">
      <div class="footer-content">
        <h3 class="section-title">Links</h3>
        <div class="links">
          {project.links.map(link => (
            <a href={link.url} class="link-item" target="_blank" rel="noopener">
              <img src={link.type === 'github' ? 'icons/github-black.svg' : 
                        link.type === 'website' ? 'icons/website.png' : 
                        'icons/download.png'} 
                   alt={link.type} />
            </a>
          ))}
        </div>
      </div>
    </footer>
  </div>
</article>

<style>
  .project-card {
    display: grid;
    grid-template-rows: auto 1fr;
    gap: 2rem;
    padding: 2rem;
    background: var(--surface-color);
    border-radius: 1rem;
    box-shadow: 0 2px 8px var(--shadow-color);
    border: 1px solid var(--accent-blue);
    transition: transform 0.2s ease;
    height: 100%;
    min-height: 500px;
    width: 100%;
    max-width: 500px;
  }

  .project-card:hover {
    transform: translateY(-4px);
  }

  .card-image {
    width: 160px;
    height: 160px;
    object-fit: contain;
    background: var(--bg-color);
    padding: 1rem;
    border-radius: 0.5rem;
    aspect-ratio: 1;
  }

  .card-image img {
    max-width: 100%;
    max-height: 100%;
  }

  .card-title {
    color: var(--accent-blue);
    text-align: center;
    font-size: 1.5rem;
    font-weight: bold;
  }

  .content {
    display: grid;
    grid-template-rows: auto auto 1fr auto;
    gap: 1.5rem;
  }

  .description {
    line-height: 1.6;
    color: var(--text-secondary);
  }

  .tech-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    overflow-y: auto;
    overflow-x: hidden;
    align-content: start;
    grid-auto-flow: row;
  }

  .tech-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--accent-blue);
    transition: transform 0.2s ease;
    padding: 0.5rem;
    border-radius: 0.25rem;
  }

  .tech-item:hover {
    transform: translateX(4px);
    color: var(--accent-green);
    background: var(--bg-color);
  }

  .tech-item img {
    width: 32px;
    height: 32px;
  }

  .links {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .link-item {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--bg-color);
    border: 1px solid var(--accent-blue);
    border-radius: 0.5rem;
    padding: 0.75rem;
    transition: all 0.2s ease;
  }

  .link-item:hover {
    background: var(--accent-blue);
    transform: translateY(-2px);
  }

  .link-item img {
    width: 24px;
    height: 24px;
    transition: filter 0.2s ease;
    filter: invert(80%) sepia(32%) saturate(434%) hue-rotate(127deg) brightness(95%) contrast(92%);
  }

  .link-item:hover img {
    filter: brightness(0.2);
  }

  .card-footer {
    padding-top: 1rem;
    border-top: 1px solid var(--accent-blue);
  }

  .section-title {
    color: var(--accent-red);
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
  }

  .tech-stack {
    display: grid;
    gap: 1.5rem;
    height: 200px;
  }

  header {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }
</style> 